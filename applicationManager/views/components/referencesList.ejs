<h2>References</h2>
<div class="row g-3">
  <% for (let ref of references) { %>

    <div class="col-4">
      <div class="card p-1">
        <h5 class="card-title"><%= ref.title %></h5>
        <div class="card-text">
          <div><%= ref.published_on %></div>
          <div><%= ref.citations %> citations</div>
          <div>Authors: <%= ref.authors.join(", ") %></div>
          <div>
            <a class="btn btn-outline-primary" href="<%= '/references/' + ref._id + '/edit' %>">Edit</a>
            <a class="btn btn-outline-danger" href="<%= '/references/' + ref._id + '/delete' %>">Delete</a>
          </div>
        </div>
      </div>
    </div>


  <% } %>

 <%- include("./pagination.ejs", { currentPage, lastPage }) %>

</div>
